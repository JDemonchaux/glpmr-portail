{% extends "GlpmrAuthentificationBundle::layout.html.twig" %}

{% block body %}	
    <div class="nav-title-wrapper">
		<h3 class="center-align">Module de recherche</h3>
	</div>
	<div class="row main">
		<div class="container">
			<div class="col s12">
				<div class="card-panel">
					<p class="blue-text text-darken-2"><i class="mdi-action-info-outline"></i> Veuillez remplir au moins un champ</p>
					<form action="{{ path("glpmr_admin_resultat_recherche") }}">
						<div class="input-field">
							<input id="username" type="text" name="username" />
							<label for="username">Nom d'utilisateur</label>
						</div>
						<div class="input-field">
							<select name="promotion">
								<option value="" disabled selected>Choisir une promotion</option>
								<option value="SIOTP-1">SIO TP 1</option>
								<option value="SIOTP-2">SIO TP 2</option>
								<option value="SIOALT-1">SIO ALT 1</option>
								<option value="SIOALT-2">SIO ALT 2</option>
								<option value="ASI-1">ASI 1</option>
								<option value="ASI-2">ASI 2</option>
							</select>
						</div>
						<div class="input-field">
							<input id="IP" type="text" name="add_ip" />
							<label for="IP">Adresse IP</label>
						</div>
						<div class="input-field">
							<input id="MAC" type="text" name="add_mac" />
							<label for="MAC">Adresse MAC</label>
						</div>
						<div class="input-field center-align">
							<button class="btn waves-effect waves-light" type="submit" name="action">Envoyer
								<i class="mdi-content-send right"></i>
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
